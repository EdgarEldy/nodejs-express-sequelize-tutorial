<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Add a new user</div>
        <div class="panel-body">
            {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
            <div class="col-md-6">
                <form role="form" action="/users" method="POST">
                    <div class="form-group">
                        <select name="role_id" id="" class="form-control">
                            <option value="">Select a role...</option>
                            {{#each roles}}
                                {{#dataValues }}
                                    <option value="{{this.id}}">{{this.name}}</option>
                                {{/dataValues}}
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>First name :</label>
                        <input type="text" name="first_name" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Last name :</label>
                        <input type="text" name="last_name" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Tel :</label>
                        <input type="text" name="tel" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Email :</label>
                        <input type="email" name="email" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Address :</label>
                        <input type="text" name="address" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Username :</label>
                        <input type="text" name="username" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Password :</label>
                        <input type="password" name="password" class="form-control" placeholder="" value="">
                    </div>
                    <div class="form-group">
                        <label>Confirm password :</label>
                        <input type="password" name="password2" class="form-control" placeholder="" value="">
                    </div>
                    <button type="submit" id="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div><!-- /.col-->