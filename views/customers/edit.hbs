<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Update a customer</div>
        <div class="panel-body">
            <div class="col-md-6">
                {{#if message}}
                <div class="bg-{{type}}">{{message}}</div>
                {{/if}}
                <form role="form" action="/customers/{{data.dataValues.id}}" method="POST">
                    <div class="form-group">
                        <label>First name</label>
                        <input type="text" name="first_name" class="form-control" placeholder=""
                            value="{{data.dataValues.first_name}}" />
                    </div>
                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" name="last_name" class="form-control" placeholder=""
                            value="{{data.dataValues.last_name}}" />
                    </div>
                    <div class="form-group">
                        <label>Tel</label>
                        <input type="text" name="tel" class="form-control" placeholder=""
                            value="{{data.dataValues.tel}}" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="email" class="form-control" placeholder=""
                            value="{{data.dataValues.email}}" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" name="address" class="form-control" placeholder=""
                            value="{{data.dataValues.address}}" />
                    </div>

                    <button type="submit" id="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div><!-- /.col-->