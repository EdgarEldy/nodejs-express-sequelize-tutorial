<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">Update a product category</div>
        <div class="panel-body">
            <div class="col-md-6">
                {{#if message}}
                <div class="bg-{{ type }}">{{ message }}</div>
                {{/if}}
                <form role="form" action="/categories/{{data.dataValues.id}}" method="POST">
                    <div class="form-group">
                        <label>Product category</label>
                        <input type="text" name="category_name" class="form-control" placeholder=""
                            value="{{data.dataValues.category_name}}" />
                    </div>
                    <button type="submit" id="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div><!-- /.col-->